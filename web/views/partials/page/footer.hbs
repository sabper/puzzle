<!--Handle auth events-->
<script>
  // 로그인, 로그아웃 이벤트 발생하면 호출 되는 함수
  firebase.auth().onAuthStateChanged(function(user) {
    window.user = user;
    // Step 1:
    //  If no user, sign in anonymously with firebase.auth().signInAnonymously()
    //  If there is a user, log out out user details for debugging purposes.

    if (user) { // 로그인 성공
      $('#loginBtn').hide(); // 로그인 버튼 hide
      $('#logoutBtn').show(); // 로그아웃 버튼 show
      $('#utid').hide(); // 로그인 모달 hide
      $('#userInfo').text(user.email)
    } else { // 로그인 실패 또는 미로그인
      $('#logoutBtn').hide(); // 로그아웃  버튼 hide
      $('#loginBtn').show(); // 로그인 버튼 show
      $('#userInfo').text(''); // 로그인한 사용자 정보 hide
    }
  });
</script>

